<body>
  <header class="display-flex justify-space-between align-center p-2">
    <h1>
      Find-A-Pet
    </h1>
  </header>
  <div class="display-flex row">
  <form id="pet-search" class="d-flex justify-center">
    <div>
    <input type="text" id="search-box" name="search-box" placeholder="Search for a pet"/>
    <button type="submit" for="pet-search"> Search </button>
    </div>
  <div>
    I'm looking for a ... 
    <label for="search-cat"> Cat </label>
    <input type="checkbox" id="search-cat" name="search-cat">
    <label for="search-dog"> Dog </label>
    <input type="checkbox" id="search-dog" name="search-dog">
  </div>
  <div>
    Sex: 
    <label for="sex-female"> F </label>
    <input type="checkbox" id="sex-female" name="sex-female">
    <label for="sex-male"> M </label>
    <input type="checkbox" id="sex-male" name="sex-male">
  </div>
  <div>
    Options: 
     <label for="is-vaccinated"> Vaccinated </label>
    <input type="checkbox" id="is-vaccinated" name="is-vaccinated">
    <label for="is-microchipped"> Microchipped </label>
    <input type="checkbox" id="is-microchipped" name="is-microchipped">
     <label for="is-desexed"> Desexed </label>
    <input type="checkbox" id="is-desexed" name="is-desexed">
    </div>
    </form>
    </div>

  <main class="container container-fluid mt-5">
   
    <!-- Render the contents of the sub layout here -->
    {{{ body }}}
  </main>
  <footer>
    <div id="contact-admin" >
      <a href="www.twitter.com"><i class="bi bi-twitter"></i></a>
      <a href="www.instagram.com"><i class="bi bi-instagram"></i></a>
      <a href="mailto:gmail@hotmail.com" > <i class="bi bi-envelope"></i></a>
      </div>
  </footer>
</body>

</html>
