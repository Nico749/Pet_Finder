<body>
  <header class="display-flex justify-space-between align-center p-2">
   <div id="headingPic"><img src="https://pngimg.com/uploads/dog/dog_PNG50275.png"></div>
    <h1>
      Find-A-Pet
    </h1>
    <div id="headingPic"><img src="https://pngimg.com/uploads/cat/cat_PNG50528.png"></div>
   <a href="/"> <h2><i class="px-5 mx-5 bi bi-house-fill"></i></h2></a>
  </header>
 
  <main class="container container-fluid mt-5">
    <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
         <button ><a href="/profile">Profile</a></button>
         <button id ="logout" >Logout</button>
        {{else}}
         <button id="sign-up-button" ><a href="/login">Sign Up or Log In</a></button>
        {{/if}}
      </nav>
   
    <!-- Render the contents of the sub layout here -->
    {{{ body }}}
  </main>
  <footer>
    <div id="contact-admin" >
      <a href="www.twitter.com"><i class="bi bi-twitter"></i></a>
      <a href="www.instagram.com"><i class="bi bi-instagram"></i></a>
      <a href="mailto:gmail@hotmail.com" > <i class="bi bi-envelope"></i></a>
      </div>
  </footer>

 <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>
</html>
