{{!-- handlebar for when we log in --}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="container d-flex flex-row justify-content-evenly">
  <div class="row mt-4">
    <div>
      <h3>Add a new pet:</h3>

      <form class="container form new-pet-form row">

        <div class="form-group col col-md-auto">
          <label class="fs-5 w-75" for="pet-name">Pet name: </label> <br>
          <label class="fs-5 w-50" for="pet-species">Species:</label><br>
          <label class="fs-5 w-50" for="pet-breed">Breed:</label><br>
          <label class="fs-5 w-50" for="pet-age">Age:</label><br>
          <label class="fs-5 w-50" for="pet-sex">Gender:</label><br>
          <label class="fs-5 w-50" for="pet-isvaccinated">Vaccinated:</label><br>
          <label class="fs-5 w-50" for="pet-ismicrochipped">Microchipped:</label><br>
          <label class="fs-5 w-50" for="pet-isdesexed">Desexed:</label><br>
          <label class="fs-5 w-50" for="pet-desc">Description:</label> <br>



        </div>

        <div class="form-group col col-md-auto">
          <input class="form-input rounded w-100 " type="text" id="pet-name" name="pet-name" placeholder="e.g. Bruno" />
          <br>
          <input class="form-input rounded w-100" type="text" id="pet-species" name="pet-species"
            placeholder="e.g. Dog" /><br>

          <input class="form-input rounded w-100" type="text" id="pet-breed" name="pet-breed"
            placeholder="e.g. Labrador" /><br>

          <input class="form-input rounded w-100" type="text" id="pet-age" name="pet-age" placeholder="e.g. 2" /><br>

          <select class="form-input rounded w-100" name="pet-sex" id="pet-sex" placeholder="Gender">
            <option value="" disabled selected hidden>Please Choose...</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
          </select><br>

          <select class="form-input rounded w-100 p-1" name="pet-isvaccinated" id="pet-isvaccinated"
            placeholder="Yes / No">
            <option value="" disabled selected hidden>Please Choose...</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
          </select><br>

          <select class="form-input rounded w-100 p-1" name="pet-ismicrochipped" id="pet-ismicrochipped"
            placeholder="Yes / No">
            <option value="" disabled selected hidden>Please Choose...</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
          </select><br>

          <select class="form-input rounded w-100 p-1" name="pet-isdesexed" id="pet-isdesexed" placeholder="Yes / No">
            <option value="" disabled selected hidden>Please Choose...</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
          </select><br>

          <textarea class="form-input w-100 rounded" id="pet-desc" name="pet-desc"
            placeholder="Provide a short description"></textarea><br>

        </div>


        <div class="form-group">
          <button id="submit-pet" type="submit" class="btn btn-primary w-75 start-0">Submit</button>
        </div>
      </form>
    </div>
  </div>


  {{!-- we can cancel pets that we posted before --}}
  {{#if pets.length}}
  <div class="col-md-6 project-list">
    <br>
    <h3>Current Pets:</h3>

    {{#each pets as |pet|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4 class="pet-name-add"><a href="/pet/{{pet.id}}">{{name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger delete-pet" data-id="{{pet.id}}">DELETE <i
            class="bi bi-trash"></i></button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>