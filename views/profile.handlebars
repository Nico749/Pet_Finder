{{!-- handlebar for when we log in --}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add a new pet:</h3>

    <form class="form new-pet-form">
        <div class="form-group">
            <label for="pet-name">Pet name:</label>
            <input class="form-input" type="text" id="pet-name" name="pet-name" />
        </div>
    
        <div class="form-group">
            <label for="pet-species">Species:</label>
            <input class="form-input" type="text" id="pet-species" name="pet-species" />
        </div>

        <div class="form-group">
            <label for="pet-breed">Breed:</label>
            <input class="form-input" type="text" id="pet-breed" name="pet-breed" />
        </div>

        <div class="form-group">
            <label for="pet-desc">Description:</label>
            <textarea class="form-input" id="pet-desc" name="pet-desc"></textarea>
        </div>
    
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
  </div>
{{!-- we can cancel pets that we posted before --}}
  {{#if pets.length}}
  <div class="col-md-6 project-list">
    <h3>Current Pets:</h3>

    {{#each pets as |pets|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/pet/{{pet.id}}">{{pet.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{pet.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/public/js/profile.js"></script>
