{{!-- login and signup handlebars --}}
<div c>
  <div id="form-container" class="row d-flex justify-content-evenly">
    <div class="col-md-6 card ">
      <form class="form login-form">
        <h2 class="text-start">Login</h2>
      
        <div class="container">
          <div class="row align-items-start">

            <div class="col">
              <label for="email-login">Email:</label>
              <br>
              <label for="password-login">Password:</label>
            </div>
           
            <div class="col">
              <input class="form-input" type="text" id="email-login" placeholder="catgirl123@hotmail.com" />
              <br>
              <input placeholder="*********" class="form-input" type="password" id="password-login" />
            </div>
            
          </div>
        </div>
        <br>
        <div class="form-group p1 text-start">
          <button class="btn btn-primary" type="submit">Login</button>
        </div>

      </form>
    </div>
    <div class="col-md-6 card w-25">
      <h2>Signup</h2>
      <br>
      <form class="form signup-form d-flex justify-content-evenly flex-column">
        <div class="form-group">
          <label for="name-signup">Name:</label>
          <input class="form-input" type="text" id="name-signup" placeholder="John Smith" />
        </div>
        <br>
        <div class="form-group">
          <label for="email-signup">Email:</label>
          <input class="form-input" type="text" id="email-signup" placeholder="iheartdogs@gmail.com" />
        </div>
        <br>
        <div class="form-group">
          <label for="password-signup">Password:</label>
          <input class="form-input" type="password" id="password-signup" placeholder="Must contain 9 characters" />
        </div>
        <br>
        <div class="form-group">
          <label for="phone-signup">Phone:</label>
          <input class="form-input" type="text" id="phone-signup" placeholder="" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/login.js"></script>